{% extends 'base.html.twig' %}

{% block title %}Audiance index{% endblock %}

{% block body %}
    <h1>Audiance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room</th>
                <th>CourtDate</th>
                <th>Dossier</th>
                <th>Judges</th>
                <th>Jugement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audiance in audiances %}
            <tr>
                <td>{{ audiance.id }}</td>
                <td>{{ audiance.room }}</td>
                <td>{{ audiance.courtDate ? audiance.courtDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audiance.dossier.titre }}</td>
                <td>
                    {% for judge in audiance.judges %}
                        {{ judge.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                    <td>
                    {% for jugement in audiance.jugements %}
                        {{ jugement.jugements }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_audiance_show', {'id': audiance.id}) }}">show</a>
                    <a href="{{ path('app_audiance_edit', {'id': audiance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audiance_new') }}">Create new</a>
{% endblock %}
